generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model EmailVerification {
  email      String   @id
  code       String
  isVerified Boolean  @default(false)
  updateAt   DateTime @default(now()) @updatedAt
}

model User {
  uuid       String    @id @default(uuid())
  id         String
  email      String    @unique
  password   String
  subscribes Company[]
}

model Company {
  uuid       String    @id @default(uuid())
  name       String    @unique
  contents   String
  subscriber Int       @default(0)
  userUuid   String
  articles   Article[]
  user       User      @relation(fields: [userUuid], references: [uuid])

  @@index([userUuid], map: "Company_userUuid_fkey")
}

model Article {
  uuid            String   @id @default(uuid())
  original_url    String
  title           String
  create_date     DateTime
  contents        String
  summary_img_url String?
  img_url         String?
  video_url       String?
  media_desc      String?
  category        String?
  companyId       String
  company         Company  @relation(fields: [companyId], references: [uuid])

  @@index([companyId], map: "Article_companyId_fkey")
}
