generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uuid String @id @default(uuid())
  email String @unique
  password String
  subscribes Company[]
}

model Company {
  uuid String @id @default(uuid())
  name String @unique
  contents String
  subscriber Int @default(0)

  articles Article[]
  
  userUuid String
  user User @relation(fields: [userUuid], references: [uuid])
}

model Article {
  uuid String @id @default(uuid())
  original_url String
  title String
  create_date DateTime
  contents String
  summary_img_url String?
  img_url String?
  video_url String?
  media_desc String?
  category String?

  companyId String
  company Company @relation(fields: [companyId], references: [uuid])
}   