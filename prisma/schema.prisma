generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model EmailVerification {
  email      String   @id
  code       String
  isVerified Boolean  @default(false)
  updateAt   DateTime @default(now()) @updatedAt
}

model User {
  uuid       String    @id @default(uuid())
  email      String    @unique
  password   String
  id         String
  subscribes Company[] @relation("UserSubscriptions")
  notifications    Notification[]
}

model Company {
  uuid            String    @id @default(uuid())
  name            String    @unique
  description     String
  profileImageUrl String
  articles        Article[]
  subscribers     User[]    @relation("UserSubscriptions")
}

model Article {
  uuid             String   @id @default(uuid())
  title            String
  contents         Json
  category         String?
  companyId        String
  createAt         DateTime
  originalUrl      String
  summaryContents  String
  summaryMediaUrl  String?
  summaryTitle     String
  summaryMediaType String?
  isHeadline       Boolean
  company          Company  @relation(fields: [companyId], references: [uuid])
  notifications    Notification[]

  @@index([companyId], map: "Article_companyId_fkey")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [uuid])
  articleId String
  article   Article  @relation(fields: [articleId], references: [uuid])
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)
}